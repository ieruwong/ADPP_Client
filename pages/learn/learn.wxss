.read{
  padding:0 70rpx;
}
.book{
  display: flex;
  border-bottom: 2rpx solid #eee;
  justify-content: space-between;
}
.book .pic{
  width: 230rpx;
}
.book .pic image{
  width: 100%;
  height: 100%;
}
.book .txt{
  width:440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx ;
}
.book .txt .title{
  font-size: 30rpx;
}
.book .txt .newsinfo{
  font-size: 25rpx;
  color: #888;
}